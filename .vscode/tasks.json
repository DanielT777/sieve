{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "pnpm compile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": { "reveal": "silent" },
      "problemMatcher": "$esbuild-watch"
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "pnpm compile:watch",
      "isBackground": true,
      "group": "build",
      "presentation": { "reveal": "silent" },
      "problemMatcher": [
        {
          "owner": "esbuild",
          "pattern": {
            "regexp": "^(.+):(\\d+):(\\d+): (error|warning): (.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "\\[watch\\] build started",
            "endsPattern": "\\[watch\\] build finished"
          }
        }
      ]
    }
  ]
}
